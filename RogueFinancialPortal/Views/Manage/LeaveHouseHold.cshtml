
@using RogueFinancialPortal.Helpers;
@{
    ViewBag.Title = "LaveHouseHold";
}

<div class="login-register" style="background-image: url(/Content/Images/login-register.jpg);">
    <div class="login-box card">
        <div class="card-body">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <h3 class="box-title m-b-20">Leave House Hold</h3>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group ">
                    <div class="col-xs-12">
                        <p>You are leaving the HouseHold!</p>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <p>You are the Head of the Household. Please select a replacement Head of Household.</p>
                        @Html.DropDownList("Members", null, new { @class = "form-control" })
                    </div>
                </div>



            }



        </div>
    </div>
</div>
