@{
    ViewBag.Title = "Home Page";
}
<div class="row p-t-20 m-l-20 m-r-20 justify-content-center">

    <div class="col-lg-4 col-md-6 Acounts ">
        <div class="card h-100">
            <div class="card-body ">
                <p>You are not in a Household. Request an Invitation to a HouseHold or create your Own!</p>
            </div>
            <a class=" btn btn-info " href="@Url.Action("HouseHoldWizard", "HouseHolds")"><i class="mdi mdi-book-open-page-variant"> Create Household</i></a>
           
        </div>
    </div>

</div>
@if (Model.Count > 0)
{
    <div class="row p-t-20 m-l-20 m-r-20 justify-content-center">
        <div class="col-lg-4 col-md-6  ">
            <div class="card h-100">
                <div class="card-body ">
                    <h4 class="card-title"> Invitations:</h4>

                    @foreach (var invitation in Model)
                    {
                        <div class="row">
                            <div class="col-4">
                                <h4>HouseHold: @invitation.HouseHoldName</h4>
                            </div>
                            <div class="col-4">
                                <a class=" btn btn-info " href="@Url.Action("ManualJoin", "Account", new { code = invitation.Code })"> Accept</a>
                            </div>
                            <div class="col-4">
                                <a class=" btn btn-danger" href="@Url.Action("DeleteInvitation", "Account", new { invitationId = invitation.Id })"> Decline</a>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
}
